<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_adn_nav"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <ImageButton
        android:id="@+id/imgComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="btnComprar"
        android:src="@drawable/btn_comprar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ImageButton
        android:id="@+id/imgRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="btnRegistrar"
        android:src="@drawable/btn_registrar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ImageButton
        android:id="@+id/imgSincronizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="btnSincronizar"
        android:src="@drawable/btn_sincronizar" />

</LinearLayout>