<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_nav_zai"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ComprarActivityHuella">

    <TextView
        android:id="@+id/idComprarValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:gravity="center_horizontal"
        android:text="@string/lbl_comprar"
        android:textColor="#498054"
        android:textSize="15pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgHuellaVerificar"
        android:layout_width="150px"
        android:layout_height="150px"
        android:maxWidth="150px"
        android:maxHeight="150px"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:src="@drawable/img_huella_p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgComprarHuella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="btnCapturarCompra"
            android:src="@drawable/btn_finger_p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgEditarCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="btnEditarCompra"
            android:src="@drawable/btn_edit_m" />

        <ImageButton
            android:id="@+id/imgHomeCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="btnCancelarCompra"
            android:src="@drawable/btn_home_p" />
    </LinearLayout>
</LinearLayout>
