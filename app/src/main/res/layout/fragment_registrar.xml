<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              tools:context="com.zaimella.snacks.zaimellasnacks.RegistrarFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTRAR"
        android:id="@+id/tituloRegistrar"
        android:layout_gravity="center"
        android:textSize="15pt"
        android:textStyle="bold"
        android:textColor="#498054"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etxCedulaIdentidad"
        android:background="#faf0f0"
        android:digits="0123456789"
        android:text="CÃ©dula de Identidad" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50pt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/huella1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="30dp"
            android:src="@drawable/fpoff" />

        <ImageView
            android:id="@+id/huella2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="30dp"
            android:paddingStart="30dp"
            android:src="@drawable/fpoff" />

        <ImageView
            android:id="@+id/huella3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="30dp"
            android:paddingStart="30dp"
            android:src="@drawable/fpoff" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagenHuella"
        android:layout_width="250px"
        android:layout_height="250px"
        android:adjustViewBounds="true"
        android:src="@drawable/sinhuella" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mensaje"
        android:textSize="15pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPTURAR"
        android:id="@+id/button3"
        android:onClick="btnFrgCapturar"/>

</LinearLayout>
