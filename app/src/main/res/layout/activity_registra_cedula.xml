<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              tools:context="com.zaimella.snacks.zaimellasnacks.RegistraCedulaActivity"
              android:gravity="center_horizontal"
              android:background="@drawable/img_nav_zai">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_registro"
        android:id="@+id/tituloRegistroCedula"
        android:textSize="15pt"
        android:textStyle="bold"
        android:paddingTop="90dp"
        android:textColor="#498054" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_numero_cedula"
        android:id="@+id/idLblNumeroCedula"
        android:textColor="#498054"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:paddingLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="10"
        android:ems="10"
        android:id="@+id/idTxtNumeroCedula"
        android:textColor="#583b3b"
        android:textSize="20pt"
        android:background="#dfd2d2"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/idRegistraCedulaContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:onClick="btnContinuarRegistroHuella"
            android:src="@drawable/btn_go_p"/>

        <ImageButton
            android:id="@+id/idRegistraCedulaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:onClick="btnRegistrarMenu"
            android:src="@drawable/btn_home_p"/>
    </LinearLayout>

</LinearLayout>
